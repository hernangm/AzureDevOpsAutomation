{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project Plan Schema",
  "type": "object",
  "required": ["metadata", "epics"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["project", "version", "workItemTypes"],
      "additionalProperties": false,
      "properties": {
        "project": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
        "description": { "type": "string" },
        "assignmentStrategy": { "type": "string", "enum": ["feature-owner"] },
        "workItemTypes": {
          "type": "object",
          "required": ["epic", "feature", "task"],
          "additionalProperties": false,
          "properties": {
            "epic": { "type": "string", "minLength": 1 },
            "feature": { "type": "string", "minLength": 1 },
            "task": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "epics": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/epic" }
    }
  },
  "$defs": {
    "epic": {
      "type": "object",
      "required": ["id", "title", "features"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "fields": { "$ref": "#/$defs/customFields" },
        "features": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/feature" }
        }
      }
    },
    "feature": {
      "type": "object",
      "required": ["id", "title", "ownerUserIds", "tasks"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "ownerUserIds": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "fields": { "$ref": "#/$defs/customFields" },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/task" }
        }
      }
    },
    "task": {
      "type": "object",
      "required": ["id", "title"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "assignedTo": { "type": "string", "minLength": 1 },
        "fields": { "$ref": "#/$defs/customFields" }
      }
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" }
        ]
      }
    }
  }
}
