{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Project Plan Schema",
  "type": "object",
  "required": ["metadata", "epics"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["project", "version", "workItemTypes"],
      "additionalProperties": false,
      "properties": {
        "project": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+$" },
        "description": { "type": "string" },
        "assignmentStrategy": { "type": "string", "enum": ["issue-owner"] },
        "workItemTypes": {
          "type": "object",
          "description": "Azure DevOps work item type names. Must match your project's process template: Basic (Epic/Issue/Task), Agile (Epic/Feature/User Story), Scrum (Epic/Feature/Product Backlog Item), CMMI (Epic/Feature/Requirement).",
          "required": ["epic", "issue", "task"],
          "additionalProperties": false,
          "properties": {
            "epic": {
              "type": "string",
              "minLength": 1,
              "description": "Level-1 work item type. Usually 'Epic' across all process templates.",
              "examples": ["Epic"]
            },
            "issue": {
              "type": "string",
              "minLength": 1,
              "description": "Level-2 work item type. Varies by process: 'Issue' (Basic), 'Feature' (Agile/Scrum/CMMI).",
              "examples": ["Issue", "Feature"]
            },
            "task": {
              "type": "string",
              "minLength": 1,
              "description": "Level-3 work item type. Varies by process: 'Task' (Agile/Basic), 'Product Backlog Item' (Scrum), 'Requirement' (CMMI), 'User Story' (Agile).",
              "examples": ["Task", "Product Backlog Item", "User Story", "Requirement"]
            }
          }
        }
      }
    },
    "epics": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/epic" }
    }
  },
  "$defs": {
    "epic": {
      "type": "object",
      "required": ["id", "title", "issues"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "ownerUserIds": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "fields": { "$ref": "#/$defs/customFields" },
        "issues": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/issue" }
        }
      }
    },
    "issue": {
      "type": "object",
      "required": ["id", "title", "ownerUserIds"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "ownerUserIds": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "fields": { "$ref": "#/$defs/customFields" },
        "tasks": {
          "type": "array",
          "items": { "$ref": "#/$defs/task" }
        }
      }
    },
    "task": {
      "type": "object",
      "required": ["id", "title"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "pattern": "^[A-Z0-9-]+$" },
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string" },
        "assignedTo": { "type": "string", "minLength": 1 },
        "ownerUserIds": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "fields": { "$ref": "#/$defs/customFields" }
      }
    },
    "customFields": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" }
        ]
      }
    }
  }
}
